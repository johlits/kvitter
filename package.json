{
  "name": "kvitter",
  "version": "0.1.1",
  "private": true,
  "description": "A learning-oriented Twitter clone to practice Azure (Portal, CLI, IaC)",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "tsc -p tsconfig.json && npm --prefix client run build",
    "start": "node dist/server.js",
    "lint": "echo 'add eslint later'",
    "postinstall": "npm --prefix client install"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "better-sqlite3": "^9.6.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.30",
    "@types/better-sqlite3": "^7.6.9",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  }
}
